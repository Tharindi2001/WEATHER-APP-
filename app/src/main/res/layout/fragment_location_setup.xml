<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_location_setup.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- res/values/colors.xml -->



    <!-- Location Setup UI Components -->
    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:hint="@string/enter_location"
        android:inputType="text"
        android:textColor="@android:color/darker_gray"
        android:layout_height="48dp"
        android:importantForAutofill="yes"/>

    <Button
        android:id="@+id/buttonSaveLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_location"
        android:layout_marginBottom="16dp"/> <!-- Increased margin for touch target -->


    <!-- Add other UI components for location setup as needed -->

</LinearLayout>
