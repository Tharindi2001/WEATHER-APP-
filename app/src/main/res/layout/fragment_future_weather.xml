<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_future_weather.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display Future Weather Details -->
    <TextView
        android:id="@+id/textViewFutureWeatherDetail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/future_weather_detail_1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewFutureWeatherDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/future_weather_detail_2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Add other UI components for future weather as needed -->

</LinearLayout>
